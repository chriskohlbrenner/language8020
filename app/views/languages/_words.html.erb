<!-- Necessary for theme -->
<div id="outer-background-container" 
      data-default-background-img="/assets/background/<%= @language.name.downcase %>_<%= @page %>.jpg"
      style="background-image:url(/assets/background/<%= @language.name.downcase %>_<%= @page %>.jpg); display: none;">
</div>

<script type="text/javascript">
  $($("#outer-background-container").fadeIn(800));
</script>


  <div class="display-words">
    <h2>The most common words in <%= @language.name %> (<%= @first_word_number %> - <%= @last_word_number %>)</h2>
    
    <p>Currently on page <%= @page + 1 %></p>

    <div class="words-container">
      <ol class="word-list" start="<%= @first_word_number %>">
        <% @words.each do |word| %>
          <li>
            <span data-toggle="tooltip" data-placement="right" data-html="true" data-original-title="<%= raw(word.translation) %>"><%= word.word %></span>
          </li>
        <% end %>
      </ol>
    </div>

    <% if @page > 0 %>
      <button class="btn btn-primary"><a class="previous-link" href="<%= "/languages/#{@language.id}?page=#{@page - 1}&per_page=#{@per_page}" %>" data-pjax>Previous page</a></button>
    <% end %>
    <% if @page * @per_page + @per_page < 1000 %>
      <button class="btn btn-primary"><a class="next-link" href="<%= "/languages/#{@language.id}?page=#{@page + 1}&per_page=#{@per_page}" %>" data-pjax>Next page</a></button>
    <% end %>
  </div>